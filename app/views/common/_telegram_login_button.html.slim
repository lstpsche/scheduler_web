.telegram-login-button class='#{local_assigns[:button_class]}'
  <script async src='https://telegram.org/js/telegram-widget.js' data-telegram-login="#{ENV['DOMAIN_BOT_NAME']}" data-size="#{local_assigns.fetch(:button_size, 'large')}" data-radius="#{local_assigns.fetch(:button_radius, 10)}" data-userpic='false' data-onauth='window.TelegramAuth.login(user)' data-request-access='write'/></script>
